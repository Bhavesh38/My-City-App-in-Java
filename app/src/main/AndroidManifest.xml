<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mycity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCity">
        <activity
            android:name=".MallsDetailsActivity"
            android:exported="false"
            android:label="Shopping Malls"
            android:parentActivityName=".CategoryActivity"/>
        <activity
            android:name=".TemplesDetailsActivity"
            android:exported="false"
            android:label="Temples"
            android:parentActivityName=".CategoryActivity"/>
        <activity
            android:name=".HotelsDetailsActivity"
            android:exported="false"
            android:label="Hotels and Resturants"
            android:parentActivityName=".CategoryActivity"/>
        <activity
            android:name=".ParkDetailsActivity"
            android:exported="false"
            android:label="Parks"
            android:parentActivityName=".CategoryActivity" />
        <activity
            android:name=".CategoryActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>